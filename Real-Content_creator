    <script>

        let generatedImages = [];


        // keyword suggestion handler

        window.Poe.registerHandler("keyword-handler", (result, context) => {

            const msg = result.responses[0];

            if (msg.status === "complete") {

                document.getElementById("keywords").value = msg.content.replace(/\n/g, ", ");

            }

        });


        // content handler

        window.Poe.registerHandler("content-handler", (result, context) => {

            const msg = result.responses[0];

            const contentDiv = document.getElementById('blogContent');

            if (msg.status === "complete") {

                contentDiv.innerHTML = marked.parse(msg.content);

                document.getElementById('generatedContent').classList.remove('hidden');

            }

        });


        document.getElementById('contentForm').addEventListener('submit', async (e) => {

            e.preventDefault();

            const formData = new FormData(e.target);

            const topic = formData.get('topic');

            const style = formData.get('style');

            const audience = formData.get('audience');

            const length = formData.get('length');

            const keywords = formData.get('keywords');

            const includeOutline = formData.get('includeOutline') === 'on';


            showLoading();


            // request keywords if empty

            if (!keywords) {

                await window.Poe.sendUserMessage(`@Claude-Sonnet-4 Suggest 5 SEO keywords and 3 long-tail keyword phrases for the topic: "${topic}". List only.`, {

                    handler: "keyword-handler", stream: false, openChat: false

                });

            }


            let prompt = `@Claude-Sonnet-4 Write a blog post about "${topic}". Style: ${style}. Audience: ${audience||'general audience'}. Length: ${length}. ${includeOutline?'Include outline headings.':''}`;


            await window.Poe.sendUserMessage(prompt, { handler: "content-handler", stream: true, openChat: false });

        });


        // export markdown

        document.getElementById('exportMdBtn').addEventListener('click', () => {

            const content = document.getElementById('blogContent').innerText;

            const blob = new Blob([content], { type: 'text/markdown' });

            const url = URL.createObjectURL(blob);

            const a = document.createElement('a');

            a.href = url; a.download = 'blog-post.md'; a.click();

            URL.revokeObjectURL(url);

        });


        // export pdf

        document.getElementById('exportPdfBtn').addEventListener('click', () => {

            const { jsPDF } = window.jspdf;

            const doc = new jsPDF();

            doc.text(document.getElementById('blogContent').innerText, 10, 10);

            doc.save('blog-post.pdf');

        });


        // export html

        document.getElementById('exportBtn').addEventListener('click', () => {

            const content = document.getElementById('blogContent').innerHTML;

            const blob = new Blob([`<!DOCTYPE html><html><head><meta charset='UTF-8'><title>Blog Post</title></head><body>${content}</body></html>`], { type: 'text/html' });

            const url = URL.createObjectURL(blob);

            const a = document.createElement('a');

            a.href = url; a.download = 'blog-post.html'; a.click();

            URL.revokeObjectURL(url);

        });


        function showLoading(){ document.getElementById('loadingState').classList.remove('hidden'); }

    </script>

</body></html>
